<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="15dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_course_mall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/icon_agency"/>
            <TextView
                android:id="@+id/tv_agency_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中牟县青羽琴行"
                android:textSize="14sp"
                android:textColor="@color/text_black"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_next"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/tv_study"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="正在学习"
                android:textColor="@color/text_orange"
                android:textSize="14sp"
                android:gravity="right"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="80dp"
                android:layout_height="83dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/img_defult_mall" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="14sp"
                    android:textColor="@color/text_black"
                    android:text="@string/text_test_long"/>
                <TextView
                    android:id="@+id/tv_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="课时【68块】"
                    android:layout_below="@id/tv_name"
                    android:background="@drawable/bg_corners_gray"
                    android:textColor="@color/text_gray2"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:padding="3dp"/>
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥99999"
                    android:textColor="@color/text_orange"
                    android:textSize="14sp"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/btn_orange_stroke"
                android:background="@drawable/btn_strok_black2"
                android:text="删除课程"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/text_black"/>
            <Button
                android:id="@+id/btn_assess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/btn_orange_stroke"
                android:background="@drawable/btn_strok_black2"
                android:text="追加评论"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/text_black"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>