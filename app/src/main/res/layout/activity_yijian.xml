<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_index">
    <include layout="@layout/layout_title_orange"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_yijian"
        android:layout_marginTop="10dp"
        android:padding="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/btn_orange_stroke"
                android:background="@drawable/btn_strok_black2"
                android:text="账号问题"
                android:textColor="@color/text_black"/>
            <Button
                android:id="@+id/btn_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/btn_orange_stroke"
                android:background="@drawable/btn_strok_black2"
                android:text="支付问题"
                android:textColor="@color/text_black"
                android:layout_marginLeft="10dp"/>
            <Button
                android:id="@+id/btn_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/btn_orange_stroke"
                android:background="@drawable/btn_strok_orange2"
                android:text="其他问题"
                android:layout_marginLeft="10dp"
                android:textColor="@color/text_orange"/>
        </LinearLayout>
        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:minLines="6"
            android:gravity="start"
            android:hint="请描述您遇到的问题"
            android:paddingTop="10dp"
            android:textColor="@color/text_black"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tv_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0/200"
            android:textColor="@color/text_gray2"
            android:textSize="13sp"
            android:gravity="right"
            android:paddingTop="5dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_commit"
        style="@style/btn_orange"
        android:text="提交反馈"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:background="@drawable/btn_corners_orange"
        android:layout_margin="30dp"
        android:padding="10dp"/>
</LinearLayout>