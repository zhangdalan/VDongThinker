<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v4.view.ViewPager>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/defultPadding"
                android:background="@color/trans_40black"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/iv_touxiang"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/img_defult_icon"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中思科技IT技术研发中心"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_touxiang"
                    android:textColor="@color/white"/>
                <Button
                    android:id="@+id/btn_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/btn_orange"
                    android:text="+ 关注"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_orange"
                    android:background="@drawable/btn_strok_orange"/>
            </RelativeLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/trans_40black"
                style="@style/defultPadding"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <View
                        android:layout_width="15dp"
                        android:layout_height="1dp"
                        android:layout_marginRight="3dp"
                        android:background="@color/white"/>
                    <TextView
                        android:id="@+id/tv_page"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:text="1/8"/>
                    <View
                        android:layout_width="15dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="3dp"
                        android:background="@color/white"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="1dp"/>
                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#机器人#"
                        android:textSize="15sp"
                        android:textColor="@color/text_orange"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/white"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:text="@string/text_test_long"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>
                <LinearLayout
                    android:id="@+id/ll_assess"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/btn_back_white" />
                    <EditText
                        android:id="@+id/et_assess"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_assess"
                        android:hint="我来说两句..."
                        android:layout_marginLeft="10dp"
                        android:textColorHint="@color/text_gray2"
                        android:padding="10dp"
                        android:textSize="15sp"/>

                    <ImageView
                        android:id="@+id/iv_zank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_zan_no"
                        style="@style/defultPadding"/>
                    <Button
                        android:id="@+id/btn_send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:text="发送"
                        style="@style/btnDefult"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>


    </FrameLayout>
</LinearLayout>