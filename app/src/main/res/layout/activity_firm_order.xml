<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/background_index"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title"/>
    <com.thinker.vdongthinker.customControl.ObservableScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="15dp"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:id="@+id/rl_address"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收货人："
                        android:textColor="@color/text_black2"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/tv_tel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13838333883"
                        android:textColor="@color/text_black2"
                        android:textSize="16sp"
                        android:layout_alignParentRight="true"/>
                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收货地址："
                        android:textColor="@color/text_black"
                        android:textSize="14sp"
                        android:layout_below="@id/tv_name"
                        android:layout_marginTop="15dp"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/tv_add_address"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:textSize="16sp"
                    android:text="@string/hint_add_address"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/btn_next"
                    android:paddingLeft="15dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:id="@+id/ll_course_mall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:padding="15dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/icon_agency"/>
                    <TextView
                        android:id="@+id/tv_agency_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="中牟县青羽琴行"
                        android:textSize="14sp"
                        android:textColor="@color/text_black"
                        android:layout_marginLeft="5dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/btn_next"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/iv_mall"
                        android:layout_width="80dp"
                        android:layout_height="83dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/img_defult_mall" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp">
                        <TextView
                            android:id="@+id/tv_mall_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textSize="14sp"
                            android:textColor="@color/text_black"
                            android:text="@string/text_test_long"/>
                        <TextView
                            android:id="@+id/tv_mall_sign"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="全部套装【68块】"
                            android:layout_below="@id/tv_mall_name"
                            android:background="@drawable/bg_corners_gray"
                            android:textColor="@color/text_gray2"
                            android:layout_marginTop="5dp"
                            android:textSize="12sp"
                            android:padding="3dp"/>
                        <TextView
                            android:id="@+id/tv_mall_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¥99999"
                            android:textColor="@color/text_orange"
                            android:textSize="14sp"
                            android:layout_alignParentBottom="true"/>
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="15dp"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:id="@+id/rl_shipping"
                    android:layout_width="match_parent"
                    android:visibility="invisible"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lable_shipping_type"
                    android:textColor="@color/text_black"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/tv_shipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="快递 免邮"
                    android:textColor="@color/text_black"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_course_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lable_course_time"
                        android:textColor="@color/text_black"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/tv_course_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2018-12-24"
                        android:textColor="@color/text_black"
                        android:textSize="15sp"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/background_index"
                    android:layout_below="@id/rl_shipping"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/tv_all_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥99999"
                    android:textColor="@color/text_orange"
                    android:layout_below="@id/line"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/tv_xiaoji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="12sp"
                    android:textColor="@color/text_black"
                    android:text="小计"
                    android:layout_below="@id/line"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/tv_all_price"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/tv_mall_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="12sp"
                    android:textColor="@color/text_black"
                    android:text="共1件商品"
                    android:layout_toLeftOf="@id/tv_xiaoji"
                    android:layout_below="@id/line"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"/>
            </RelativeLayout>

        </LinearLayout>
    </com.thinker.vdongthinker.customControl.ObservableScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_gravity="bottom"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/defultPadding"
            android:gravity="center_vertical">
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>
            <LinearLayout
                android:id="@+id/ll_manage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合计"
                    android:textSize="14sp"
                    android:textColor="@color/text_black"/>
                <TextView
                    android:id="@+id/tv_price_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥99999"
                    android:textSize="14sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/text_orange"/>
                <Button
                    android:id="@+id/btn_buy"
                    style="@style/btnDefult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn__orange"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="提交订单"
                    android:textSize="12sp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_delete"
                style="@style/btn_orange_stroke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="删除"
                android:background="@drawable/btn_strok_orange2"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:textColor="@color/text_orange"/>

        </LinearLayout>
    </FrameLayout>
</LinearLayout>