<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/defultPadding"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_touxiang"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_mall_on"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_touxiang"
            android:text="小仙女"
            android:textColor="@color/text_black"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="2018-12-31"
            android:textColor="@color/text_gray"
            android:textSize="12sp"
            android:layout_toRightOf="@id/iv_touxiang"
            android:layout_below="@id/tv_name"/>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/text_gray2"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_close"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="40dp"
        android:textColor="@color/text_gray"
        android:text="觉得你的帖子不错~"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/background_gray2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:src="@mipmap/img_defult_mall"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="95dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/trans_70black"
            android:gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="4图"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone" />
        <RelativeLayout
            android:id="@+id/rl_vedio"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/bg_oval"
            android:layout_marginLeft="45dp"
            android:visibility="gone"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_video_start" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_img"
            android:layout_margin="15dp"
            android:layout_centerVertical="true"
            android:textColor="@color/text_black"
            android:textSize="14sp"
            android:text="的实力开发和吉林省地方官"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_replay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:visibility="gone">
        <EditText
            android:id="@+id/et_assess"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_assess"
            android:hint="回复xxx:"
            android:textColorHint="@color/text_gray2"
            android:padding="10dp"
            android:textSize="15sp" />
        <Button
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="回复"
            android:minHeight="0dp"
            android:minWidth="0dp"
            style="@style/defultPadding"
            android:textColor="@color/text_orange"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>