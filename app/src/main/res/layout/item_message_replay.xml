<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/defultPadding"
    android:layout_marginTop="10dp"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_touxiang"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_mall_on"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_touxiang"
            android:text="小仙女"
            android:textColor="@color/text_black"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="2018-12-31"
            android:textColor="@color/text_gray"
            android:textSize="12sp"
            android:layout_toRightOf="@id/iv_touxiang"
            android:layout_below="@id/tv_name"/>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/text_gray2"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_close"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="40dp"
        android:textColor="@color/text_black"
        android:text="@string/text_test_long"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/background_gray2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@mipmap/img_defult_mall"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@id/iv_img"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textSize="14sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="的实力开发和吉林省地方官dshflasihfsai"/>
            <TextView
                android:id="@+id/tv_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课时【6节】"
                android:layout_below="@id/tv_detail"
                android:background="@drawable/bg_corners_gray"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/iv_img"
                android:textColor="@color/text_gray2"
                android:textSize="12sp"
                android:padding="3dp"/>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>