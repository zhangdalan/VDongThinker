<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="15dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_course_mall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@mipmap/icon_agency"/>
            <TextView
                android:id="@+id/tv_agency_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中牟县青羽琴行"
                android:textSize="14sp"
                android:textColor="@color/text_black"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_next"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="14sp"
                    android:textColor="@color/text_black"
                    android:text="@string/text_test_long"/>
                <RelativeLayout
                    android:id="@+id/rl_course"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentBottom="true">
                    <TextView
                        android:id="@+id/tv_course_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30"
                        android:textSize="13sp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_horizontal"
                        android:textColor="@color/text_orange"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_orange"
                        android:text="课程数"
                        android:textSize="13sp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:layout_below="@id/tv_course_num"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/rl_course"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentBottom="true">
                    <TextView
                        android:id="@+id/tv_people_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100"
                        android:textSize="13sp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/text_orange"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_orange"
                        android:text="学员数"
                        android:textSize="13sp"
                        android:layout_marginTop="5dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/tv_people_num"/>
                </RelativeLayout>
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="80dp"
                android:layout_height="83dp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/img_defult_mall" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/btn_orange_stroke"
                android:background="@drawable/btn_strok_black2"
                android:text="删除课程"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/text_black"/>
            <Button
                android:id="@+id/btn_assess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/btn_orange_stroke"
                android:background="@drawable/btn_strok_black2"
                android:text="追加评论"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/text_black"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>