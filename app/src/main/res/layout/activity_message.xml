<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_index">
    <include layout="@layout/layout_title_orange"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">


    <RelativeLayout
        android:id="@+id/rl_zan"
        style="@style/courseDetailBackground"
        android:paddingRight="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp">
        <ImageView
            android:id="@+id/iv_zan"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/icon_my_zan"/>
        <TextView
            android:id="@+id/tv_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lable_zan"
            android:textColor="@color/text_black"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_zan"/>
        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/btn_next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>
        <TextView
            android:id="@+id/tv_zan_num"
            style="@style/btn_orange"
            android:textSize="12dp"
            android:text="555"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_1"
            android:layout_marginRight="5dp"
            android:paddingLeft="5.5dp"
            android:paddingRight="5.5dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_index"
        android:layout_marginLeft="65dp"/>
    <RelativeLayout
        android:id="@+id/rl_assess"
        style="@style/courseDetailBackground"
        android:paddingRight="0dp"
        android:layout_marginBottom="0dp">
        <ImageView
            android:id="@+id/iv_assess"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/icon_my_message"/>
        <TextView
            android:id="@+id/tv_assess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lable_assess"
            android:textColor="@color/text_black"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_assess"/>
        <ImageView
            android:id="@+id/iv_2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/btn_next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>
        <TextView
            android:id="@+id/tv_assess_num"
            style="@style/btn_orange"
            android:textSize="12dp"
            android:text="5"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_2"
            android:layout_marginRight="5dp"
            android:paddingLeft="5.5dp"
            android:paddingRight="5.5dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"/>
    </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_replay"
        style="@style/courseDetailBackground"
        android:paddingRight="0dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/iv_replay"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/icon_course_replay"/>
        <TextView
            android:id="@+id/tv_replay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lable_replay"
            android:textColor="@color/text_black"
            android:layout_marginLeft="15dp"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_replay"/>
        <ImageView
            android:id="@+id/iv_3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/btn_next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>
        <TextView
            android:id="@+id/tv_replay_num"
            style="@style/btn_orange"
            android:textSize="12dp"
            android:text="55"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_3"
            android:layout_marginRight="5dp"
            android:paddingLeft="5.5dp"
            android:paddingRight="5.5dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"/>
    </RelativeLayout>
</LinearLayout>