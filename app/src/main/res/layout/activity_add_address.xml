<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_index">
    <include layout="@layout/layout_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:padding="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_width="5dp"
                android:layout_height="20dp"
                android:background="@color/background_orange"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lable_student_info"
                android:textColor="@color/text_black"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lable_name1"
                android:textSize="13sp"
                android:textColor="@color/text_gray"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:hint="真实姓名"
                android:background="@null"
                android:textColorHint="@color/text_black"
                android:textColor="@color/text_black"
                android:padding="10dp"
                android:gravity="right"/>
        </LinearLayout>
        <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/background_index"/>
        <LinearLayout
            android:id="@+id/ll_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lable_sex"
                android:textSize="13sp"
                android:textColor="@color/text_gray"
                android:padding="10dp"/>
            <RadioGroup
                android:id="@+id/rg_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_gravity="center_vertical">
                <RadioButton
                    android:id="@+id/rb_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男"
                    android:button="@null"
                    android:background="@null"
                    android:drawableLeft="@drawable/radio_sex"
                    android:drawablePadding="5dp"
                    android:checked="true"
                    android:textSize="13sp"
                    android:textColor="@color/text_black"
                    android:layout_marginRight="30dp"/>
                <RadioButton
                    android:id="@+id/rb_woman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女"
                    android:button="@null"
                    android:background="@null"
                    android:textSize="13sp"
                    android:textColor="@color/text_black"
                    android:drawableLeft="@drawable/radio_sex"
                    android:drawablePadding="5dp"/>
            </RadioGroup>
        </LinearLayout>
        <View
            android:id="@+id/view_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background_index"/>
        <LinearLayout
            android:id="@+id/ll_birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lable_birth"
                android:textSize="13sp"
                android:textColor="@color/text_gray"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/tv_birth"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:hint="2018-12-24"
                android:background="@null"
                android:textColorHint="@color/text_black"
                android:textColor="@color/text_black"
                android:padding="10dp"
                android:gravity="right"/>
        </LinearLayout>
        <View
            android:id="@+id/view_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background_index"/>
        <LinearLayout
            android:id="@+id/ll_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lable_phone"
                android:textSize="13sp"
                android:textColor="@color/text_gray"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:hint="+86"
                android:background="@null"
                android:textColorHint="@color/text_black"
                android:textColor="@color/text_black"
                android:padding="10dp"
                android:gravity="right"/>
        </LinearLayout>
        <View
            android:id="@+id/view_line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background_index"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lable_address1"
                android:textSize="13sp"
                android:textColor="@color/text_gray"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/tv_city"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:hint="省/市/区县"
                android:background="@null"
                android:textColorHint="@color/text_black"
                android:textColor="@color/text_black"
                android:padding="10dp"
                android:gravity="right"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_next"
                android:gravity="right"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background_index"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lable_address2"
                android:textSize="13sp"
                android:textColor="@color/text_gray"
                android:padding="10dp"/>
            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:hint="如小区、楼号、门牌号"
                android:background="@null"
                android:textColorHint="@color/text_black"
                android:textColor="@color/text_black"
                android:padding="10dp"
                android:gravity="right"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background_index"/>

    </LinearLayout>
    <Button
        android:id="@+id/btn_commit"
        style="@style/btn_orange"
        android:text="保存"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:background="@drawable/btn_corners_orange"
        android:layout_margin="30dp"
        android:padding="10dp"/>
</LinearLayout>