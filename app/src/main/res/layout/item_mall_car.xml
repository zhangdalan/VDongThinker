<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/bg_item_corners"
    android:padding="15dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/cb_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/select_mall_all" />
    <ImageView
        android:id="@+id/iv_mall"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/img_defult_mall"
        android:scaleType="centerCrop"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/tv_mall_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="15sp"
            android:textColor="@color/text_black"
            android:text="@string/text_test_long"/>
        <TextView
            android:id="@+id/tv_mall_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部套装【68块】"
            android:layout_below="@id/tv_mall_name"
            android:background="@drawable/bg_corners_gray"
            android:textColor="@color/text_gray2"
            android:layout_marginTop="5dp"
            android:textSize="12sp"
            android:padding="3dp"/>
        <TextView
            android:id="@+id/tv_mall_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥99999"
            android:textColor="@color/text_orange"
            android:textSize="15sp"
            android:layout_alignParentBottom="true"/>
        <com.thinker.vdongthinker.customControl.NumView
            android:id="@+id/numView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"></com.thinker.vdongthinker.customControl.NumView>
    </RelativeLayout>
</LinearLayout>